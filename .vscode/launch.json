{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Indiekit",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/node_modules/@indiekit/indiekit/bin/cli.js",
      "args": ["--config", "${workspaceFolder}/indiekit.config.js", "serve"],
      "env": {
        "DEBUG": "indiekit:*,-indiekit:request,indiekit-store:*",
        "MONGO_URL": "${env:MONGO_URL}"
      }
    }
  ]
}
